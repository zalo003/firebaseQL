{
  "include": ["src"],
  "compilerOptions": {
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "lib": [
    "DOM",
    "ES6",
    "DOM.Iterable",
    "ScriptHost",
    "ES2016.Array.Include"
  ],

  "exclude": [
    "node_modules",
    "dist",
    "esm"
  ]
  
}